<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.developer.marianamotta.keeptask">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.android.vending.BILLING" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Anotations">
        <activity
            android:name="com.developer.marianamotta.keeptask.ui.create.CreateActivity"
            android:parentActivityName="com.developer.marianamotta.keeptask.MainActivity" />
        <activity android:name="com.developer.marianamotta.keeptask.ui.login.RegistryActivity" />
        <activity android:name="com.developer.marianamotta.keeptask.ui.login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-8404806525691340~5118528335" />

        <activity android:name="com.developer.marianamotta.keeptask.MainActivity" />
    </application>

</manifest>